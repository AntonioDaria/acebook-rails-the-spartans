<h1>hello world</h1>
<%= @posts.message %>
<p>

<h2>Comments</h2>
<% @posts.comments.each do |comment| %>
  <p>
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [@posts, @posts.comments.build], local: true) do |f| %>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div id="submit">
    <%= f.submit %>
  </div>
  <% end %>
